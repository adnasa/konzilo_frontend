ng-form.form.form-horizontal(name="authorForm")
  .form-group(ng-show="!showFields || showFields.name")
    label.control-label {{ 'GLOBAL.NAME' | translate }}
    .controls
      input(type="text", name="name", ng-model="author.name", required)
  .form-group(ng-show="!showFields || showFields.email")
    label.control-label {{ 'GLOBAL.EMAIL' | translate }}
    .controls
      input(type="email", name="email", ng-model="author.email")
  .form-group(ng-show="!showFields || showFeilds.about")
    label.control-label {{ 'AUTHOR.ABOUT' | translate }}
    .controls
      textarea(name="about", ng-model="author.about")
  .form-group(ng-show="!showFields || showFields.image")
    label.control-label {{ 'GLOBAL.IMAGE' | translate }}
    .controls
      file-upload-list(limit=1, ng-model="images", bundle="media", ng-change="getImage()")
