.wrapper
  .main-content
    .list(ng-class="{visible: articlePart}")
      .box.pad
        div(kz-approve-queue, kz-max-height="150", link-pattern="#/approve/:article", article="article")
    .main-full
      .box.pad.info-message(ng-show="!article")
        h1 {{ 'REVIEW.TITLE' | translate }}
        p {{ 'REVIEW.DESC' | translate }}
      .main(ng-show="article")
        .box.pad.articleinfo
          ol.breadcrumb(ng-show="article")
            li
              a(ng-href="#/deliver") {{'DELIVER.TITLE' | translate}}
            li.active
              {{article.title}}
          h1 {{article.title}}
        .parts
          kz-content-type-article-form(article="article")
      .additional(ng-show="article")
        kz-deliver-info(article="article")
