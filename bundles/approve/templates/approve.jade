.wrapper
  .main-content
    .list(ng-class="{visible: part}")
      .box.pad
        div(kz-approve-queue, kz-max-height="150", link-pattern="#/approve/:part", selected="part")
    .main-full
      .box.pad.info-message(ng-show="!article")
        h1 {{ 'REVIEW.TITLE' | translate }}
        p {{ 'REVIEW.DESC' | translate }}
      .main(ng-show="article")
        .box.pad.articleinfo
          ol.breadcrumb(ng-show="article")
            li
              a(ng-href="#/deliver") {{'DELIVER.TITLE' | translate}}
            li.active {{article.title}}
          konzilo-articlepart-form(article-part="part")
          konzilo-articlepart-change-state(article-part="part")
      .additional(ng-show="article")
        kz-deliver-info(article-part="part")
