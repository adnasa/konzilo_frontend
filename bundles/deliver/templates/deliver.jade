.wrapper
  .main-content
    .list(ng-class="{visible: articlePart}")
      .box.pad
        div(kntnt-article-deliver, kz-max-height="150", link-pattern="#/deliver/:part", states="states", selected="articlePart")
    .main-full
      .box.pad(ng-show="!articlePart")
        h1 {{'DELIVER.TITLE' | translate}}
        p {{'DELIVER.DESCRIPTION' | translate}}
      .main(ng-show="articlePart")
        .box.pad.articleinfo
          ol.breadcrumb(ng-show="articlePart")
            li
              a(ng-href="#/deliver") {{'DELIVER.TITLE' | translate}}
            li.active
              {{part.article.title}}
            li.active(ng-show="part")
              {{part.title}}
          .inner
            konzilo-articlepart-form(article-part="articlePart", use-auto-save="useSave")
            konzilo-articlepart-change-state(article-part="articlePart")
      .additional(ng-show="articlePart")
        kz-deliver-info(part="part")
