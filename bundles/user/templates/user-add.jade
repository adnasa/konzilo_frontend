form.form.user-form.form-horizontal(ng-submit="saveUser()", name="userForm")
  .title
      h2 {{'USER.ADDTITLE' | translate}}
  .form-group()
    label.control-label {{'GLOBAL.USERNAME' | translate}}
    .controls
      input(type="text", name="name", ng-model="user.username")
  .form-group
    label.control-label {{'GLOBAL.EMAIL' | translate}}
    .controls
      input(type="email", name="email", ng-model="user.email")
  .form-group
    label.control-label {{'GLOBAL.PASSWORD' | translate}}
    .controls
      input(type="password", name="password", ng-model="user.password")
      input(type="password", name="password2", ng-model="password2")
  .form-group
    label.control-label {{'USER.ACTIVE' | translate}}
    .controls
      i.icon-edit.pull-right
      label.checkbox
        input(type="checkbox", name="active", ng-model="user.active")
  .form-actions
    input(type="submit", value="{{'USER.CREATE' | translate}}")