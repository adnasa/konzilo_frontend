.filter-config
  .modal-header
    h1 {{'FILTER.TITLE' | translate }}
  form(ng-submit="saveValue()")
    .modal-body
      label.control-label
      span {{ 'FILTER.FILTERON' | translate }}
      strong {{filter.label}}
      {{filter.description}}:
      input(type="text", name="input", ng-model="value", ng-show="!options")
      select(type="text", name="input", ng-model="value", ng-show="options")
        option(ng-repeat="(value, label) in options", value="{{value}}") {{label}}
    .modal-footer
      input.btn.btn-primary(type="submit", name="save", value="{{'GLOBAL.SAVE' | translate }}")
